extends ../_template

mixin works__item()
  .works__item.works-item
    .works-item__img
      img(src="assets/img/works/work-01.jpg" alt="picture")
      a(href="#").works-item__img-more
        +svg('magnific')
        span view site
    .works-item__info
      h3.works-item__title Privat notary site
      .works-item__date
        +svg('calendar')
        time(pubdate datetime='2017-10') november 2017
      a(href="#" target="_blank" rel="nofollow noopener noreferrer").works-item__link
        +svg('link')
        span http://notary-office.kiev.ua/
      .works-item__btns
        .works-item__btn html
        .works-item__btn css
        .works-item__btn js
        .works-item__btn react

block variables
  - var title       = 'Last works | Odinokun.com'
  - var description = 'Last works | Odinokun.com'
  - var ogtitle     = 'Last works | Odinokun.com'
  - var ogimage     = 'assets/img/social.jpg'

block content
  .main-wrap
    include ../sections/aside

    //begin content
    section.main.works
      include ../elements/burger

      //begin page-header
      .page-header
        .container
          .page-header__title
            h1.page-header__title.page-title My last works
      //end page-header

      .container
        //begin works__gallery
        .works__gallery
          +works__item
          +works__item
          +works__item
          +works__item
          +works__item
          +works__item
        //end works__gallery
    //end content
