extends ../_template

block variables
  - var title       = 'Contacts | Odinokun.com'
  - var description = 'Contacts | Odinokun.com'
  - var ogtitle     = 'Contacts | Odinokun.com'
  - var ogimage     = 'assets/img/social.jpg'

block content
  .main-wrap
    include ../sections/aside

    //begin content
    section.main.contacts
      include ../elements/burger

      //begin contacts-map
      .contacts-map#contacts-map
      //end contacts-map

      //begin contacts-item
      .contacts-item#contacts-item
        h1.contacts-item__title.page-title Contacts

        .contacts-item__links.contact-links
          //begin contact-links__item
          .contact-links__item
            h3.contact-links__title My profiles
            ul.contact-links__list.contacts-list
              li
                a(href="https://www.linkedin.com/in/dmytro-gordiienko/" target="_blank" rel="nofollow noopener noreferrer").contact-links__link.contact-links__link--in
                  +svg('in')
                  span LinkedIn
              li
                a(href="https://github.com/Odinokun" target="_blank" rel="nofollow noopener noreferrer").contact-links__link.contact-links__link--git
                  +svg('git')
                  span Github
          //end contact-links__item
          //begin contact-links__item
          .contact-links__item
            h3.contact-links__title Get in touch with me
            ul.contact-links__list
              li
                a(href="https://t.me/odinokun" target="_blank" rel="nofollow noopener noreferrer").contact-links__link.contact-links__link--teleg
                  +svg('telegram')
                  span My telegram
              li
                a(href="mailto:odinokun@gmail.com").contact-links__link.contact-links__link--mail
                  +svg('mail')
                  span odinokun@gmail.com
          //end contact-links__item

        .contacts-item__btn
          a(href="assets/text/front-end_developer_Dmitry_Gordienko.docx").btn.btn--dark Download CV
      //end contacts-item
    //end content
