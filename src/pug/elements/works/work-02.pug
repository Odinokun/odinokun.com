.works__item.works-item
  .works-item__img
    img(src="assets/img/works/work-02.jpg" alt="Recruiting agency of Saint-Petersburg")
    a(href="https://top-recruiting.ru" target="_blank" rel="nofollow noopener noreferrer").works-item__img-more
      +svg('magnific')
      span view site
  .works-item__info
    h3.works-item__title Recruiting agency of St.Petersburg
    .works-item__date
      +svg('calendar')
      time(datetime='2018-01') january 2018
    a(href="https://top-recruiting.ru" target="_blank" rel="nofollow noopener noreferrer").works-item__link
      +svg('link')
      span top-recruiting.ru
    .works-item__btns
      .works-item__btn pug
      .works-item__btn scss
      .works-item__btn js/jquery
//end work-02 (TOP Recruiting)
