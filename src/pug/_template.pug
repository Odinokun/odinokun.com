include elements/_mixins
block variables

doctype html
html(lang="eng")
  head
    meta(charset="utf-8")
    title #{title}

    meta(name="description" content= description)
    meta(name="author"      content="http://odinokun.com/")

    // begin responsive
    meta(name="viewport"              content="width=device-width, initial-scale=1")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    // end responsive

    // begin social content&image
    meta(property='og:title'  content= ogtitle)
    meta(property="og:image"  content= ogimage)
    // end social content&image

    // begin favicon block start
    link(rel='shortcut icon'    type='image/x-icon' href='assets/img/favicon/favicon.jpg')
    link(rel='apple-touch-icon' sizes='180x180'     href='img/favicon/apple-touch-icon-180x180.jpg')
    // end favicon block end

    //begin fonts
    link(href="https://fonts.googleapis.com/css?family=Kaushan+Script|Oswald|Roboto+Condensed:400,700|Teko&display=swap&subset=cyrillic-ext" rel="stylesheet")
    //end fonts

    link(rel='stylesheet' href='assets/css/foundation.css')
    link(rel='stylesheet' href='assets/css/app.css')

    // begin custom browsers color
    meta(name='theme-color', content='#0b0b0b')
    // end custom browsers color

    //[if lt IE 9]><script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"></script><![endif]

  body
    block content

    // это ключ без ограничений - удалить перед продакшеном
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCOCsBWLmb8s4eo6cltyZG2HRu99sG3RnE")
    script(src='assets/js/foundation.js')
    script(src='assets/js/app.js')
    script(src='assets/js/uncompressed.js')
